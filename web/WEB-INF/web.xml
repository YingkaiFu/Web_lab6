<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>controller.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>controller.CartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/getCart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QueryUserController</servlet-name>
        <servlet-class>controller.QueryUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryUserController</servlet-name>
        <url-pattern>/getUser</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>CategoryController</welcome-file>
    </welcome-file-list>
</web-app>